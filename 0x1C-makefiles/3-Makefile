CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = clean oclean fclean
.PHONY: all ${NAME} ${RM}
all: ${OBJ} ${NAME}
%.o : %.c
	${CC} -c  -o $@ $<
${NAME}: ${OBJ}
	${CC} ${OBJ} -o ${NAME}
clean:
	rm -f *.swp *~ ${NAME}
oclean:
	rm -f ${OBJ}
fclean:
	rm -f *.swp *~ ${NAME}
	rm -f ${OBJ}
re: oclean all
